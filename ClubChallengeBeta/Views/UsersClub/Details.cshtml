@model ClubChallengeBeta.Models.UserDetailsViewModel
@using Microsoft.AspNet.Identity

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-10">
            <div class="row">
                <div class="col-sm-6 col-md-4">
                    <!--TODO: Change with user pic-->
                    <img src="@Url.Action("GetIcon", "Club", new { @id = Model.ClubId })" alt="" class="img-rounded img-responsive" />
                </div>
                <div class="col-sm-6 col-md-8">
                    <h4>
                        @Html.DisplayFor(model => model.UserName)
                    </h4>
                    <p>
                        @if (!String.IsNullOrEmpty(Model.Phone))
                        {
                            <i class="fa fa-lg fa-phone details-icon"></i>@Model.Phone
                            <br />
                        }
                        @if (!String.IsNullOrEmpty(Model.Email))
                        {
                            <i class="fa fa-lg fa-envelope details-icon"></i>@Model.Email
                            <br />
                        }
                        <i class="icon ion-ios-tennisball details-icon" style="font-size: 24px;"></i>@Model.ChallengeCount
                        <br />
                        <i class="icon ion-trophy details-icon" style="font-size: 24px;"></i>@Model.TrophyCount
                        <br />
                        <i class="fa fa-university details-icon"></i>@Model.ClubName
                    </p>
                    <!-- Split button -->
                    <div class="btn-group">
                        @if (Model.CanChallenge)
                        {
                            <a class="btn btn-sm btn-primary" href="@Url.Action("Challenge", "UsersClub", new { @id = Model.ClubId })"><i class="icon ion-person button-icon"></i>Single Challenge</a>
                            <a class="modal-link btn btn-sm btn-danger" href="@Url.Action("MultiChallenge", "UsersClub", new { @id = Model.ClubId })"><i class="icon ion-person-add button-icon"></i>Team Challenge</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>