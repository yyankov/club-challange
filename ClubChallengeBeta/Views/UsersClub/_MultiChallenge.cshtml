@model ClubChallengeBeta.Models.MultiChallengeViewModel
@using Microsoft.AspNet.Identity

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/validation.js">
</script>
<div class="modal-body">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Team Challenge</h4>
    </div>
    @using (Html.BeginForm("MultiChallenge", "UsersClub", FormMethod.Post, new { @id = "multi" }))
    {
        <script>
            $.validator.unobtrusive.parse("#multi");
        </script>
        <div class="modal-body">
            <div class="row">
                @Html.ValidationSummary()
            </div>
            <div class="row">
                <div class="editor-label">
                    <strong>Challenger</strong>
                </div>
                <div class="editor-field">
                    <input type="text" class="form-control" disabled value="@User.Identity.GetUserName()">
                </div>
            </div>
            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.PartnerId)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(m => m.PartnerId, new SelectList(ViewBag.users, "Value", "Text"), new { @class = "form-control" })
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.Opponent1Id)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(m => m.Opponent1Id, new SelectList(ViewBag.users, "Value", "Text"), new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.Opponent2Id)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(m => m.Opponent2Id, new SelectList(ViewBag.users, "Value", "Text"), new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="submit" id="approve-btn" class="btn btn-primary">
                    Challenge
                </button>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>