@model IEnumerable<ClubChallengeBeta.App_Data.SingleChallenge>


<table class="table">
    <tr>
        <th>
            Challenger
        </th>
        <th>

        </th>
        <th>
            Opponent
        </th>
        <th>
        </th>
        <th>
            Result
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.UserName)
            </td>
            <td>
                @if (item.User1Accepted)
                {
                    <i class="fa fa-lg fa-circle"></i>
                }
                else
                {
                    <i class="fa fa-lg fa-circle-o"></i>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser1.UserName)
            </td>
            <td>
                @if (item.User2Accepted)
                {
                    <i class="fa fa-lg fa-circle"></i>
                }
                else
                {
                    <i class="fa fa-lg fa-circle-o"></i>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
            <td>
                @Html.ActionLink("Accept", "Accept", new { id = item.SinglesChallengeId }) |
                @Html.ActionLink("Reject", "Reject", new { id = item.SinglesChallengeId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SinglesChallengeId })
            </td>
        </tr>
    }

</table>
