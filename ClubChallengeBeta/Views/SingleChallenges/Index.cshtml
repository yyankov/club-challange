@model IEnumerable<ClubChallengeBeta.App_Data.SingleChallenge>
@using Microsoft.AspNet.Identity
<br />
<p><b>Challenges in @ViewBag.ClubName</b></p>
<table class="table">
    <tr>
        <th>
            Challenger
        </th>
        <th>

        </th>
        <th>
            Opponent
        </th>
        <th>
        </th>
        <th>
            Result
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.UserName)
            </td>
            <td>
                @if (item.User1Accepted)
                {
                    <i class="icon ion-ios-tennisball"></i>
                }
                else
                {
                    <i class="icon ion-ios-tennisball-outline"></i>
                }
                @if (item.WinnerId == item.AspNetUser.Id)
                {
                    <i class="ion-ios-star"></i>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser1.UserName)
            </td>
            <td>
                @if (item.User2Accepted)
                {
                    <i class="icon ion-ios-tennisball"></i>
                }
                else
                {
                    <i class="icon ion-ios-tennisball-outline"></i>
                }
                @if (item.WinnerId == item.AspNetUser1.Id)
                {
                    <i class="ion-ios-star"></i>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
        </tr>
    }

</table>
